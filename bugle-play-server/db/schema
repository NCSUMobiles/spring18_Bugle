CREATE TABLE IF NOT EXISTS bugle.users (
    u_id SERIAL PRIMARY KEY,
	u_name text NOT NULL,
	email text NOT NULL,
	mobile text,
	dob text,
	password text NOT NULL,
	type text NOT NULL,
	description text,
	location text,
	website text
);

CREATE TABLE IF NOT EXISTS bugle.events (
	e_id SERIAL PRIMARY KEY,
	e_name text NOT NULL,
	location text,
	datetime text,
	description text,
	members text,
	u_id integer, 
	status text
);

CREATE TABLE IF NOT EXISTS bugle.applicants (
	a_id SERIAL PRIMARY KEY,
	u_id integer NOT NULL,
	e_id integer NOT NULL,
	status text
);

CREATE TABLE IF NOT EXISTS bugle.chats (
	c_id SERIAL PRIMARY KEY,
	c_name text NOT NULL,
	u_ids text,
	status text
);